<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherApp"
    android:orientation="vertical"
    android:background="@drawable/backgroundppp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/cityTv"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:hint="Enter City Name"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    />

                    <TextView
                        android:id="@+id/dateTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Date"
                        android:layout_margin="10dp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        />
                </LinearLayout>

                <SearchView
                    android:id="@+id/searchSv"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/cutom_background_search"
                    android:layout_marginTop="20dp"
                    />

                <ImageView
                    android:id="@+id/searchIv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/search"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="15dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/mainIconTv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="WeatherApiIcon">
        </ImageView>
        <TextView
            android:id="@+id/descWeatherTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Sunny"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/mainTempTv"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:hint="12"
                android:textSize="40sp"
                android:layout_margin="10dp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/humidityIconSv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/thermometer"
                        />
                    <TextView
                        android:id="@+id/humidityTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Humidityper"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:layout_margin="15dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/pressureIconSv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/bloodpressure"
                        />
                    <TextView
                        android:id="@+id/pressureTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:hint="Pressure"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/windIconSv"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/wind"
                        />
                    <TextView
                        android:id="@+id/windTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"
                        android:hint="Wind"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="horizontal"
            android:padding="10dp"
            android:visibility="visible" />
    </LinearLayout>
    </LinearLayout>